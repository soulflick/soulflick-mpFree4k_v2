                                        </Style.Triggers>
                                    </Style>
                                </Label.Style>
                            </Label>
                        </StackPanel>
                    </Grid>
                </ComboBoxItem>
            </ComboBox>

            <controls:AlbumView x:Name="AlbumView" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderThickness="0"/>
        </Grid>

