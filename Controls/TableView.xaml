                            </Label>
                            <Label Content="Plain" Cursor="Hand" FontSize="{DynamicResource FontSizeNormal}" Margin="20,0,0,0" Tag="{x:Static enums:AlbumViewType.Plain}" MouseDown="AlbumViewType_MouseDown">
